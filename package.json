{
  "name": "satisfactory-mod-manager-gui",
  "version": "2.1.2",
  "author": "mircearoata",
  "description": "Handles Satisfactory mods and mod loader",
  "license": "GPL-3.0",
  "main": "./dist/electron/main.js",
  "scripts": {
    "build": "node .electron-vue/build.js",
    "build:dir": "node .electron-vue/build.js && electron-builder --dir",
    "build:clean": "cross-env BUILD_TARGET=clean node .electron-vue/build.js",
    "build:web": "cross-env BUILD_TARGET=web node .electron-vue/build.js",
    "dev": "node .electron-vue/dev-runner.js -- --remote-debugging-port=9222",
    "lint": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter --fix src",
    "pack": "yarn pack:main &&  yarn pack:renderer",
    "pack:main": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.main.config.js",
    "pack:renderer": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.renderer.config.js",
    "postinstall": "yarn lint && electron-builder install-app-deps",
    "dist": "yarn build && electron-builder build",
    "publish:win": "yarn build && electron-builder build --win",
    "publish:mac": "yarn build && electron-builder build --mac",
    "publish:linux": "yarn build && electron-builder build --linux"
  },
  "build": {
    "productName": "Satisfactory Mod Manager",
    "appId": "com.mircearoata.smmanagergui",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/electron/**/*"
    ],
    "protocols": {
      "name": "Satisfactory Mod Manager",
      "schemes": [
        "smmanager"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "build/icons/icon.icns"
    },
    "win": {
      "icon": "build/icons/icon.ico"
    },
    "linux": {
      "icon": "build/icons"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName} Setup.${ext}"
    }
  },
  "dependencies": {
    "@babel/runtime": "^7.7.4",
    "bluebird": "^3.7.2",
    "electron-log": "^4.2.2",
    "electron-updater": "^4.2.2",
    "filenamify": "^4.1.0",
    "jszip": "^3.4.0",
    "marked": "^1.1.0",
    "node-stream-zip": "^1.11.2",
    "platform-folders": "^0.5.1",
    "sanitize-html": "^1.21.1",
    "satisfactory-mod-manager-api": "^2.0.3",
    "semver": "^7.3.2",
    "vue": "^2.5.16",
    "vue-electron": "^1.0.6",
    "vuetify": "^2.2.22",
    "vuex": "^3.1.2",
    "ws": "^7.2.3"
  },
  "devDependencies": {
    "@babel/core": "^7.7.4",
    "@babel/plugin-proposal-function-bind": "^7.7.4",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.7.4",
    "@babel/register": "^7.7.4",
    "@babel/runtime-corejs2": "^7.7.4",
    "@mdi/font": "^5.3.45",
    "ajv": "^6.5.0",
    "babel-eslint": "^10.0.3",
    "babel-loader": "^8.0.6",
    "babili-webpack-plugin": "^0.1.2",
    "cfonts": "^2.1.2",
    "chalk": "^4.1.0",
    "copy-webpack-plugin": "^6.0.2",
    "cross-env": "^7.0.2",
    "css-loader": "^3.2.0",
    "deepmerge": "^4.2.2",
    "del": "^5.1.0",
    "devtron": "^1.4.0",
    "electron": "^9.0.4",
    "electron-builder": "^22.7.0",
    "electron-debug": "^3.0.1",
    "electron-devtools-installer": "^3.0.0",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-import-resolver-webpack": "^0.12.2",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "eslint-plugin-vue": "^6.0.1",
    "fibers": "^5.0.0",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "listr": "^0.14.3",
    "mini-css-extract-plugin": "^0.9.0",
    "node-loader": "^0.6.0",
    "node-sass": "^4.9.2",
    "sass": "^1.26.3",
    "sass-loader": "^8.0.2",
    "style-loader": "^1.0.0",
    "url-loader": "^4.1.0",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^15.7.2",
    "vue-style-loader": "^4.1.0",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^4.15.1",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.1.4",
    "webpack-hot-middleware": "^2.22.2",
    "webpack-merge": "^4.1.3"
  }
}
